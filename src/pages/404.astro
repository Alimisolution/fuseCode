---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <!-- error area start -->
  <section class="zq_error-area pt-100 pb-100 zq_dark_bg error">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-7">
          <div class="zq_error-wrap text-center">
            <img src="assets/images/bg/404.png" alt="" />
            <div class="zq_error-content">
              <h2>Oops! That page can't be found.</h2>
              <p>
                We're really sorry but we can't seem to find the page you <br />
                were looking for.
              </p>
              <a href="index.html" class="zq_theme-btn">Go Back To Home</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- error area end -->
</Layout>

<style>
  .error {
    display: flex;
    flex-direction: column;
    height: 100vh;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    text-align: center;
  }
</style>
